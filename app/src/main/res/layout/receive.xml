<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_receive_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_receiveProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="267dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/RL_receiveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_receive_background"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/card_receive_img"
        app:layout_constraintTop_toBottomOf="@+id/card_receive_img"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="This is receive message"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time receive message"
            app:layout_constraintStart_toStartOf="@+id/txt_receive_message"
            app:layout_constraintTop_toBottomOf="@+id/txt_receive_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/status_messageReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status message receive"
        android:textSize="4sp"
        app:layout_constraintStart_toStartOf="@+id/RL_receiveLayout"
        app:layout_constraintTop_toBottomOf="@+id/RL_receiveLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>