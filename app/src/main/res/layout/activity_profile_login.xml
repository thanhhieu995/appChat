<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blonde_blue"
    tools:context=".ProfileLoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile_login_imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_login_imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"
            tools:layout_editor_absoluteX="193dp"
            tools:layout_editor_absoluteY="66dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_login_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/card_profile_login_imgLogo"
        app:layout_constraintStart_toStartOf="@+id/card_profile_login_imgLogo"
        app:layout_constraintTop_toBottomOf="@+id/card_profile_login_imgLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>