<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountLogin.SetUpActivity">

    <ImageView
        android:id="@+id/img_setUpAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:background="@drawable/img_avatar_setup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_AddPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:background="@drawable/btn_setup_addphoto_background"
        android:text="Add a Picture"
        app:layout_constraintStart_toEndOf="@+id/img_setUpAvatar"
        app:layout_constraintTop_toTopOf="@+id/img_setUpAvatar" />

    <Button
        android:id="@+id/btn_TakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Take a Photo"
        android:background="@drawable/btn_setup_takephoto_background"
        app:layout_constraintBottom_toBottomOf="@+id/img_setUpAvatar"
        app:layout_constraintStart_toEndOf="@+id/img_setUpAvatar" />

    <Button
        android:id="@+id/btn_Continue_Setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Continue"
        android:background="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>